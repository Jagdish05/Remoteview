<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_object_flow"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.jagdish.remoteview.ObjectFlow">

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/frame1"
        android:foregroundGravity="center"
        android:background="#000000"
        android:layout_height="match_parent">
        <!-- <WebView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/webview">
         </WebView>-->
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/laoder"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center|center"
            android:background="@android:color/transparent"
            app:indicatorName="BallPulseSyncIndicator"
            />-->

        <ImageButton
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back_button"
            android:background="@android:color/transparent"
            android:layout_gravity="left|top"
            android:scaleType="fitCenter"
            android:alpha="0.8"/>

        <ImageButton
            android:id="@+id/captureObject"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/captureobject"
            android:background="@android:color/transparent"
            android:layout_gravity="center|end"
            android:scaleType="fitCenter"
            android:alpha="0.8"/>

        <ImageButton
            android:id="@+id/flowObject"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/flowobject"
            android:background="@android:color/transparent"
            android:layout_gravity="center|end"
            android:scaleType="fitCenter"
            android:tag="start"/>

        <!--<ImageButton
            android:id="@+id/stopflow"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/videostop"
            android:background="@android:color/transparent"
            android:layout_gravity="center|end"
            android:scaleType="fitCenter"
            android:alpha="0.8"/>-->

    </FrameLayout>

</RelativeLayout>
